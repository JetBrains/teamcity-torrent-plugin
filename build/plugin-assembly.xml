<?xml version="1.0"?>
<assembly>
  <id>plugin-assembly</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <files>
    <file>
      <source>target/teamcity-plugin.xml</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>target/teamcity-torrent-plugin-agent.zip</source>
      <outputDirectory>agent</outputDirectory>
    </file>
  </files>
  <moduleSets>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>org.jetbrains.teamcity:teamcity-torrent-plugin-server</include>
      </includes>
      <binaries>
        <outputDirectory>server</outputDirectory>
        <unpack>false</unpack>
        <dependencySets>
          <dependencySet>
            <includes>
              <include>com.turn:*</include>
              <include>org.simpleframework:simple</include>
              <include>commons-io:commons-io</include>
              <include>org.jetbrains.teamcity:teamcity-torrent-plugin-common</include>
            </includes>
            <excludes>
              <exclude>*:pom</exclude>
            </excludes>
          </dependencySet>
        </dependencySets>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>
